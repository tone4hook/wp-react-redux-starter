{
	"name": "react-redux-starter",
	"version": "1.0.0",
	"description":
		"A boilerplate template for a React project with Redux(and Redux Thunk).",
	"main": "index.js",
	"scripts": {
		"start": "webpack-dev-server --mode development",
		"build": "webpack --mode development",
		"prod": "webpack --mode production",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:helpers": "jest /src/utils/__tests__/helpers.test.js",
		"test:components": "jest /src/components/__tests__/",
		"test:actions": "jest /src/actions/__tests__/",
		"test:reducers": "jest /src/reducers/__tests__/"
	},
	"keywords": [],
	"author": "tone4hook",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/preset-env": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"babel-core": "^7.0.0-bridge.0",
		"babel-jest": "^23.6.0",
		"babel-loader": "^8.0.4",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"css-loader": "^1.0.0",
		"enzyme": "^3.6.0",
		"enzyme-adapter-react-16": "^1.5.0",
		"enzyme-to-json": "^3.3.4",
		"file-loader": "^2.0.0",
		"html-webpack-plugin": "^3.2.0",
		"jest": "^23.6.0",
		"jest-css-modules": "^1.1.0",
		"mini-css-extract-plugin": "^0.4.3",
		"node-sass": "^4.9.3",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"redux-mock-store": "^1.5.3",
		"sass-loader": "^7.1.0",
		"uglifyjs-webpack-plugin": "^2.0.1",
		"webpack": "^4.20.2",
		"webpack-cli": "^3.1.2",
		"webpack-dev-server": "^3.1.9"
	},
	"dependencies": {
		"bootstrap": "^4.1.1",
		"react": "^16.4.1",
		"react-dom": "^16.4.1",
		"react-icons": "^3.1.0",
		"react-redux": "^5.0.7",
		"react-redux-loading-bar": "^4.0.5",
		"react-router-dom": "^4.3.1",
		"redux": "^4.0.0",
		"redux-thunk": "^2.3.0"
	},
	"jest": {
		"verbose": true,
		"transform": {
			"^.+\\.js$": "babel-jest",
			"^.+\\.(css|scss|less)$": "jest-css-modules"
		},
		"globals": {
			"NODE_ENV": "test"
		},
		"moduleFileExtensions": ["js", "jsx"],
		"moduleDirectories": [
			"node_modules",
			"src",
			"src/components",
			"src/actions",
			"src/middleware",
			"src/reducers",
			"src/sass",
			"src/utils"
		],
		"setupFiles": ["./src/setupTests.js"],
		"snapshotSerializers": ["enzyme-to-json/serializer"]
	}
}
